<!--        <item name="colorSurface">#E8F1F5</item>-->
<!--        <item name="android:fontFamily">@font/montserrat_medium</item>-->
    </style>

    <style name="ActiveIndication" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="itemActiveIndicatorStyle">@color/black</item>

<!--        <item name="color">@color/my_personal</item>-->
    </style>
</resources>